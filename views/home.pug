extends layout.pug

block content
  .container.mx-auto.p-8.bg-white.rounded-lg.shadow-md.mt-6(aria-label='Home page content')
    .text-center.py-16
      h1(class=['text-5xl', 'font-bold', 'text-custom-red', 'mb-2']) Your Campus Marketplace -
      span(class=['text-5xl', 'font-bold', 'text-custom-yellow']) Buy, Sell, Thrive
      p(class=['text-gray-600', 'text-xl', 'mt-4']) 10+ Brands Available
    .flex.justify-center.space-x-6.mb-12
      button(class=['bg-red-500', 'text-white', 'px-6', 'py-3', 'rounded-lg', 'hover:bg-red-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-red-600'], hx-get='/products?category=beauty', hx-target='#main-content', aria-label='Filter products by Beauty category') Beauty
      button(class=['bg-blue-500', 'text-white', 'px-6', 'py-3', 'rounded-lg', 'hover:bg-blue-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-blue-600'], hx-get='/products?category=fashion', hx-target='#main-content', aria-label='Filter products by Fashion category') Fashion
      button(class=['bg-green-500', 'text-white', 'px-6', 'py-3', 'rounded-lg', 'hover:bg-green-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-green-600'], hx-get='/products?category=electronics', hx-target='#main-content', aria-label='Filter products by Electronics category') Electronics
      button(class=['bg-purple-500', 'text-white', 'px-6', 'py-3', 'rounded-lg', 'hover:bg-purple-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-purple-600'], hx-get='/products?category=accessories', hx-target='#main-content', aria-label='Filter products by Accessories category') Accessories
    .text-center.mb-12
      h2(class=['text-2xl', 'font-semibold', 'text-gray-800', 'underline'], aria-label='Popular Products section') Popular Products
    .grid(class=['grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-4', 'gap-8'], role='region', aria-label='Popular products grid')
      each product in products.slice(0, 8)
        div(class=['bg-white', 'rounded-lg', 'shadow-md', 'p-6', 'flex', 'flex-col', 'items-center', 'hover:shadow-lg', 'transition-shadow'], role='article', aria-label=`Product: ${product.name}`)
          img(class=['w-full', 'h-56', 'object-cover', 'rounded-t-lg', 'mb-4'], src=product.images[0], alt=product.name, aria-label=`Image of ${product.name}`)
          h3(class=['text-xl', 'font-semibold', 'text-gray-800', 'mb-2'])= product.name
          p(class=['text-gray-600', 'mb-4']) â‚¹#{product.price}
          a(class=['text-blue-600', 'hover:underline', 'text-sm', 'focus:outline-none', 'focus:ring-2', 'focus:ring-blue-600'], href=`/product/${product.id}`, aria-label=`View more details for ${product.name}`) View More
    .mt-12
      img(class=['w-full', 'rounded-lg', 'shadow-md', 'h-64', 'object-cover'], src='/images/promo-hands.jpg', alt='Promotional offer', aria-label='Promotional offer image')