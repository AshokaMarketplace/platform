extends ../layout

block content
    .container.mx-auto.px-4.py-8
        h1.text-3xl.font-bold.mb-8 Add New Founder

        form(action="/admin/founders" method="POST" enctype="multipart/form-data").space-y-6
            // Basic Information
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Basic Information
                
                .grid.grid-cols-1.md:grid-cols-2.gap-6
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Founder Name
                        input(type="text" name="name" required).w-full.px-3.py-2.border.rounded-md
                    
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Title
                        input(type="text" name="title" required).w-full.px-3.py-2.border.rounded-md

                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Location
                        input(type="text" name="location" required).w-full.px-3.py-2.border.rounded-md

                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Profile Image
                        input(type="file" name="image" accept="image/*" required).w-full

            // Bio & Story
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Bio & Story
                
                .form-group.mb-4
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Short Bio
                    textarea(name="bio" rows="3" required).w-full.px-3.py-2.border.rounded-md
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Founder Story
                    textarea(name="story" rows="6" required).w-full.px-3.py-2.border.rounded-md

            // Social Links
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Social Links
                
                .grid.grid-cols-1.md:grid-cols-2.gap-6
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Instagram
                        input(type="url" name="instagram").w-full.px-3.py-2.border.rounded-md
                    
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 LinkedIn
                        input(type="url" name="linkedin").w-full.px-3.py-2.border.rounded-md
                    
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Website
                        input(type="url" name="website").w-full.px-3.py-2.border.rounded-md

            // Achievements
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Achievements
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Achievements (one per line)
                    textarea(name="achievements" rows="4").w-full.px-3.py-2.border.rounded-md

            // UPI QR Code
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 UPI QR Code
                
                .form-group.mb-4
                    label.block.text-sm.font-medium.text-gray-700.mb-2 UPI ID
                    input(type="text" name="upiId" required placeholder="e.g., 1234567890@upi").w-full.px-3.py-2.border.rounded-md
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 UPI QR Code Image
                    input(type="file" name="upiQrCode" accept="image/*" required).w-full

            // Submit Button
            .flex.justify-end
                button(type="submit").bg-blue-600.text-white.px-6.py-2.rounded-md.hover:bg-blue-700.transition-colors
                    | Add Founder 