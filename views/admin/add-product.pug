extends ../layout

block content
    div(class="container mx-auto px-4 py-8")
        h1(class="text-3xl font-bold mb-8") Add New Product

        form(action="/admin/products" method="POST" enctype="multipart/form-data" class="space-y-6")
            // Basic Information
            div(class="bg-white p-6 rounded-lg shadow-md")
                h2(class="text-xl font-semibold mb-4") Basic Information
                
                div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
                    div(class="form-group")
                        label(class="block text-sm font-medium text-gray-700 mb-2") Product Name
                        input(type="text" name="name" required class="w-full px-3 py-2 border rounded-md")
                    
                    div(class="form-group")
                        label(class="block text-sm font-medium text-gray-700 mb-2") Category
                        select(name="category" required class="w-full px-3 py-2 border rounded-md")
                            option(value="") Select Category
                            option(value="Home & Living") Home & Living
                            option(value="Fashion") Fashion
                            option(value="Art") Art
                            option(value="Food") Food
                            option(value="Other") Other

                    div(class="form-group")
                        label(class="block text-sm font-medium text-gray-700 mb-2") Price (₹)
                        input(type="number" name="price" required class="w-full px-3 py-2 border rounded-md")

                    div(class="form-group")
                        label(class="block text-sm font-medium text-gray-700 mb-2") Founder
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Price (₹)
                        input(type="number" name="price" required).w-full.px-3.py-2.border.rounded-md

                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Founder
                        select(name="founderId" required).w-full.px-3.py-2.border.rounded-md
                            option(value="") Select Founder
                            each founder in founders
                                option(value=founder.id)= founder.name

            // Description
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Description
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Product Description
                    textarea(name="description" rows="4" required).w-full.px-3.py-2.border.rounded-md

            // Images
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Product Images
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Main Image
                    input(type="file" name="mainImage" accept="image/*" required).w-full
                
                .form-group.mt-4
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Additional Images
                    input(type="file" name="additionalImages" accept="image/*" multiple).w-full

            // Features & Details
            .bg-white.p-6.rounded-lg.shadow-md
                h2.text-xl.font-semibold.mb-4 Features & Details
                
                .form-group
                    label.block.text-sm.font-medium.text-gray-700.mb-2 Features (one per line)
                    textarea(name="features" rows="4").w-full.px-3.py-2.border.rounded-md
                
                .grid.grid-cols-1.md:grid-cols-2.gap-6.mt-4
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Materials
                        input(type="text" name="materials").w-full.px-3.py-2.border.rounded-md
                    
                    .form-group
                        label.block.text-sm.font-medium.text-gray-700.mb-2 Dimensions
                        input(type="text" name="dimensions").w-full.px-3.py-2.border.rounded-md

            // Submit Button
            .flex.justify-end
                button(type="submit").bg-blue-600.text-white.px-6.py-2.rounded-md.hover:bg-blue-700.transition-colors
                    | Add Product 