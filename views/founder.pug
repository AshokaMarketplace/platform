extends layout.pug

block content
  // Hero Section
  section(class="py-16 bg-gradient-to-b from-gray-50 to-white relative overflow-hidden")
    div(class="absolute inset-0 pattern-grid opacity-5")
    div(class="container mx-auto px-4 relative z-10")
      div(class="max-w-4xl mx-auto")
        // Founder Profile
        div(class="flex flex-col md:flex-row gap-8 items-center mb-12")
          // Founder Image
          div(class="w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden shadow-xl")
            img(
              src=founder.image || '/images/founders/default.jpg'
              alt=founder.name
              class="w-full h-full object-cover"
            )
          
          // Founder Info
          div(class="flex-1")
            h1(class="text-4xl font-bold text-gray-800 mb-2")= founder.name
            p(class="text-xl text-gray-600 mb-4")= founder.title
            p(class="text-gray-600 mb-6")= founder.bio
            
            // Social Links
            div(class="flex gap-4")
              a(
                href="https://www.instagram.com/kazematcha"
                target="_blank"
                class="text-gray-600 hover:text-gray-900 transition-colors"
              )
                svg(class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z")
              
              a(
                href="https://www.linkedin.com/in/radhika-gupta-ashoka/"
                target="_blank"
                class="text-gray-600 hover:text-gray-900 transition-colors"
              )
                svg(class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z")

        // Founder Story
        div(class="prose max-w-none mb-12")
          h2(class="text-2xl font-bold text-gray-800 mb-4") Their Story
          p(class="text-gray-600")= founder.story

        // Gallery Section
        if founder.gallery && founder.gallery.length > 0
          div(class="mb-12")
            h2(class="text-2xl font-bold text-gray-800 mb-6") Photo Gallery
            div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
              each photo in founder.gallery
                div(class="group relative overflow-hidden rounded-lg shadow-lg aspect-video")
                  img(
                    src=photo
                    alt=`${founder.name} gallery photo`
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
                  )
                  div(class="absolute inset-0 bg-black bg-opacity-25 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center")
                    p(class="text-white text-center px-4") View Photo

        // Achievements
        if founder.achievements && founder.achievements.length > 0
          div(class="mb-12")
            h2(class="text-2xl font-bold text-gray-800 mb-6") Achievements
            ul(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              each achievement in founder.achievements
                li(class="flex items-start gap-3")
                  svg(class="w-6 h-6 text-green-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7")
                  span(class="text-gray-600")= achievement

        // Location
        if founder.location
          div(class="mb-12")
            h2(class="text-2xl font-bold text-gray-800 mb-4") Location
            p(class="text-gray-600")= founder.location

  style.
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
    
    .animate-gradient {
      background-size: 200% auto;
      animation: gradient 8s linear infinite;
    }
    
    .pattern-grid {
      background-image: radial-gradient(rgba(0, 0, 0, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
    } 