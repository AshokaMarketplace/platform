extends layout

block content
	section(class="relative min-h-screen py-12 overflow-hidden")
		// Animated background elements
		div(class="absolute inset-0 bg-gradient-to-br from-primary/5 via-accent-purple/5 to-accent-pink/5")
		div(class="absolute inset-0 bg-[url('/images/wavy-pattern.svg')] opacity-10")
		
		div(class="container mx-auto px-4 relative z-10")
			div(class="max-w-2xl mx-auto")
				// Error Card
				div(class="bg-white/80 backdrop-blur-md rounded-2xl p-8 shadow-lg")
					// Error Icon
					div(class="mb-8 text-center")
						div(class="w-16 h-16 bg-red-100 rounded-full mx-auto flex items-center justify-center")
							svg(class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
								path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z")
					
					// Error Message
					h1(class="text-3xl font-bold text-gray-800 text-center mb-4")= message || 'Error'
					if error && error.status
						p(class="text-gray-600 text-center mb-8") Status: #{error.status}
					
					// Back Button
					div(class="text-center mt-8")
						a(
							href="/"
							class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
						)
							svg(class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24")
								path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
							span Back to Home
