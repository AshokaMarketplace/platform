extends layout.pug

block content
  .container.mx-auto.p-6.bg-white.rounded-lg.shadow-md.mt-4
    .flex.flex-col.md:flex-row.gap-8
      img(class=['w-full', 'md:w-1/2', 'h-96', 'object-cover', 'rounded-lg', 'mb-4', 'md:mb-0'], src='/images/campus.jpg', alt='Ashoka University Campus')
      .w-full.md:w-1/2
        .text-center.py-12
          h1(class=['text-5xl', 'font-bold', 'text-white', 'bg-red-600', 'rounded-tl-lg', 'rounded-tr-lg', 'py-4', 'mb-8'])
            span.text-red-600 A
            span.text-blue-600 BOUT
            span.text-red-600 US
        p(class=['text-gray-700', 'text-lg', 'mb-4']) Welcome to Ashoka Marketplace, your campus hub for buying, selling, and thriving!