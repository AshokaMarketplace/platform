doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Ashoka Marketplace
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    script(src="https://unpkg.com/htmx.org@1.9.6")
    style.
      :root {
        --custom-red: #FF3366;
        --custom-yellow: #FFB800;
      }
      .text-custom-red { color: var(--custom-red); }
      .text-custom-yellow { color: var(--custom-yellow); }
      .bg-custom-red { background-color: var(--custom-red); }

  body
    nav(class="bg-white shadow-sm")
      div(class="container mx-auto px-6")
        div(class="flex justify-between items-center py-4")
          a(href="/" class="text-2xl font-bold text-custom-red") Ashoka Marketplace
          div(class="flex items-center space-x-8")
            a(href="/" class="text-gray-600 hover:text-gray-900") Home
            a(href="/products" class="text-gray-600 hover:text-gray-900") All Products
            a(href="/stories" class="text-gray-600 hover:text-gray-900") Stories
            a(href="/about" class="text-gray-600 hover:text-gray-900") About Us
            a(href="/seller/register" class="bg-custom-red text-white px-4 py-2 rounded-lg hover:bg-opacity-90") Become a Seller

    main
      block content

    footer(class="bg-gray-800 text-white mt-12")
      div(class="container mx-auto px-6 py-8")
        div(class="grid grid-cols-1 md:grid-cols-4 gap-8")
          div
            h3(class="text-lg font-bold mb-4") AshokanMarketplace
            p(class="text-gray-400") Your Campus Marketplace
          div
            h3(class="text-lg font-bold mb-4") Quick Links
            ul(class="space-y-2")
              li
                a(href="/" class="text-gray-400 hover:text-white") Home
              li
                a(href="/products" class="text-gray-400 hover:text-white") All Products
              li
                a(href="/stories" class="text-gray-400 hover:text-white") Stories
              li
                a(href="/about" class="text-gray-400 hover:text-white") About Us
          div
            h3(class="text-lg font-bold mb-4") Categories
            ul(class="space-y-2")
              li
                a(href="/products?category=beauty" class="text-gray-400 hover:text-white") Beauty
              li
                a(href="/products?category=fashion" class="text-gray-400 hover:text-white") Fashion
              li
                a(href="/products?category=electronics" class="text-gray-400 hover:text-white") Electronics
              li
                a(href="/products?category=accessories" class="text-gray-400 hover:text-white") Accessories
          div
            h3(class="text-lg font-bold mb-4") Contact Us
            ul(class="space-y-2 text-gray-400")
              li Email: support@ashokanmarketplace.com
              li Phone: +91 1234567890
              li Address: Ashokan Campus, India
        div(class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400")
          p &copy; 2024 AshokanMarketplace. All rights reserved.